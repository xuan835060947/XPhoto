<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/ivReturn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:src="@drawable/return_bg" />

        <TextView
            android:id="@+id/tvSave"
            style="@style/normal_font"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/dark_orange_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="保存" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >

        <SurfaceView
            android:id="@+id/svShow"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <com.example.photoprocessing.component.TouchCircle
            android:id="@+id/tcShow"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/ivReduceBluz"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:src="@drawable/reduce" />

        <com.example.photoprocessing.component.SeekBarComtrol
            android:id="@+id/sbcProgress"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="5"
            android:background="@color/bg_light_black" />

        <ImageView
            android:id="@+id/ivAddBluz"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:src="@drawable/add" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivCancel"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/cancel_bg" />
		
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/bar_line"
            />
        
        <ImageView
            android:id="@+id/ivConfirm"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/confirm_bg" />
    </LinearLayout>

</LinearLayout>